<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>TODOアプリ</title>
  <style>
    body { font-family: sans-serif; margin: 2em; }
    form { margin-bottom: 1em; }
    .done { text-decoration: line-through; color: #888; }
    button { margin-left: 0.5em; }
  </style>
</head>
<body>
  <h1>TODOリスト</h1>
  <form action="/add" method="post">
    <input type="text" name="task" placeholder="新しいタスク" required>
    <input type="date" name="due_date" placeholder="期限日">
    <select name="category_id">
      <option value="">カテゴリ選択</option>
      <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% }) %>
    </select>
    <button type="submit">追加</button>
    <a href="/categories">カテゴリ管理</a>
  </form>
  <ul>
    <% todos.forEach(todo => { %>
      <li>
        <span class="<%= todo.done ? 'done' : '' %>"><%= todo.task %></span>
        <% if (todo.due_date) { %>
          <span>（期限: <%= todo.due_date %>）</span>
        <% } %>
        <% if (todo.created_at) { %>
          <span>［登録: <%= todo.created_at %>］</span>
        <% } %>
        <% if (todo.category_id) { %>
          <span>［カテゴリ: <%= (categories.find(c => c.id === todo.category_id) || {}).name || '' %>］</span>
        <% } %>
        <% if (!todo.done) { %>
          <form action="/done/<%= todo.id %>" method="post" style="display:inline;">
            <button type="submit">完了</button>
          </form>
        <% } %>
        <form action="/delete/<%= todo.id %>" method="post" style="display:inline;">
          <button type="submit">削除</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
